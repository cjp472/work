/* pages/about_us/about_us.wxss */
page{
  background-color: #f6f6f6;
}
.top{
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.left_nav,.right_nav{
  width: 50%;
  text-align: center;
  color: #5d5d5d;
  font-size: 30rpx;
}
.active{
  background: linear-gradient(to bottom, #6fbcfd, #35a3f2);
  color: #fff;
  padding: 12rpx 36rpx;
  border-radius: 30rpx;
}
.zanwu_img{
  width: 40%;
  margin: 180rpx 30% 0;
}
.zanwu_text{
  text-align: center;
  font-size: 28rpx;
  color: #666;
  width: 100%;
  margin-top: 60rpx;
}


/**选择编辑类型**/
.edit_view{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  height: 340rpx;
  z-index: 99;
}
.edit_icon_view{
  width: 86%;
  margin: 30rpx 7%;
  display: flex;
  align-items: center;
}
.edit_icon_view_1{
  width: 25%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
.edit_icon{
  width: 140rpx;
  height: 140rpx;
}
.edit_close_view{
  width: 100%;
  text-align: center;
}
.close_icon{
  width: 80rpx;
  height: 80rpx;
}


.warn_view{
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f6f6f6;
  padding-left: 7%;
  box-sizing: border-box;
}
map{
  width: 100%;
  height: 400rpx;
}
.shop_view{
  width: 94%;
  margin: 30rpx 3%;
  padding: 30rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 18rpx;
  box-shadow: 0 0 20rpx #ccc;
}
.shop_view_1{
  width: 94%;
  display: flex;
  border-bottom: 1rpx solid #cbcbcb;
  margin: 0 3% 30rpx;
  box-sizing: border-box;
  justify-content: space-between; 
}
.view_shop_left{
  width: 40%;
  text-align: left;
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
}
.red_color{
  color: red;
  font-size: 20rpx;
  margin-right: 8rpx;
}
.input_1{
  font-size: 26rpx;
  color: #666;
  width: 100%;
  box-sizing: border-box;
  text-align: right;
  margin-bottom: 20rpx;
}
.text-right{
  text-align: right;
}
.tishi_view{
  font-size: 26rpx;
  color: #e7e7e7;
  padding-left: 5%;
}
.but_view{
  width: 80%;
  margin: 30rpx 10% 0;
  box-sizing: border-box;
  display: flex;
}
.view_but1{
  background-color: #f8f8f8;
  color: #999;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  letter-spacing: 8rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  width: 40%;
  margin-right: 10%;
  text-align: center;
}
.view_but2{
  background: linear-gradient(to top,#2a9ff0,#7ac1ff );
  color: #fff;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  letter-spacing: 8rpx;
  border-radius: 12rpx;
  width: 40%;
  margin-left: 10%;
  text-align: center;
}
.add_shop{
  background: linear-gradient(to top,#2a9ff0,#7ac1ff );
  color: #fff;
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
  letter-spacing: 2rpx;
  border-radius: 40rpx;
  width: 40%;
  text-align: center;
  margin: 30rpx 30%;
  display:flex;
  align-items:center;
  justify-content:center;
}
.view_1{
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #ccc;
}
.more_icon{
  width: 14rpx;
  height: 24rpx;
  margin-right: 3%;
}
