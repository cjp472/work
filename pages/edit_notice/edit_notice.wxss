/* pages/edit_notice/edit_notice.wxss */
page{
  background-color: #f6f6f6;
  border-top: 1rpx solid #ccc;
}
.con_view{
  background-color: #f5f5f5;
  width: 100%;
}
.bg_view{
  width: 94%;
  margin: 30rpx 3%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 18rpx;
  box-shadow: 0 0 20rpx #ccc;
}
.title{
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
}
.red_color{
  color: red;
  font-size: 20rpx;
  margin-right: 8rpx;
}
.input_1{
  font-size: 26rpx;
  color: #666;
  width: 95%;
  border-bottom: 1rpx solid #cbcbcb;
  margin: 16rpx 0 34rpx 16rpx; 
  box-sizing: border-box;
}
.text_area{
  width: 100%;
  height: 240rpx;
  background-color: #fafafa;
  border: 1rpx solid #ccc;
  padding: 14rpx;
  font-size: 24rpx;
  color: #666;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.confirm {
  width: 94%;
  margin: 70rpx 0 0;
  height: 100rpx;
  color: #fff;
  border-radius: 12rpx;
  letter-spacing: 12rpx;
  position: fixed;
  bottom: 60rpx;
  left: 3%;
}
.Gradient_color{
  background: linear-gradient(to top,#2a9ff0,#7ac1ff );
}